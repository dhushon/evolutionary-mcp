# Evolutionary MCP Environment Configuration
# Generated by setup utility

# General Configuration
# Environment (DEV, PROD)
ENVIRONMENT=DEV
# Bypass authentication for development (true/false)
DEV_MODE_BYPASS=true

# Database Configuration
# Database host
DB_HOST=localhost
# Database port
DB_PORT=5432
# Database user
DB_USER=user
# Database password
DB_PASSWORD=password
# Database name
DB_NAME=db
# SSL mode (disable, require, verify-full)
DB_SSLMODE=disable

# ML Sidecar Configuration
# URL for the Python ML service
ML_SIDECAR_URL=http://localhost:8001

# Authentication (Okta)
# Your Okta Domain (e.g., https://dev-123456.okta.com/oauth2/default)
AUTH_OKTA_DOMAIN=https://{yourOktaDomain}
# Backend Web App Client ID
AUTH_CLIENT_ID={backendClientId}
# Backend Web App Client Secret
AUTH_CLIENT_SECRET={backendClientSecret}
# Frontend/Swagger SPA Client ID (PKCE)
AUTH_SWAGGER_CLIENT_ID={spaClientId}
# Redirect URL for the backend callback
AUTH_REDIRECT_URL=http://localhost:8080/auth/callback

# TLS Configuration
# Set to true to enable HTTPS
TLS_ENABLE=false
# Path to certificate file
TLS_CERT_FILE=
# Path to key file
TLS_KEY_FILE=
# Hostnames for self-signed cert generation (comma separated)
TLS_HOSTNAMES=localhost,127.0.0.1
